@model IEnumerable<LibraryDomain.Domain.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div class="container">
    <div class="row d-flex justify-content-between">
        @foreach (var book in Model)
        {
            <div class="col-3">
                <a class="text-decoration-none text-black" asp-action="Details" asp-route-id="@book.Id">
                    <div class="card" style="width: 18rem;">
                        <img src="@book.Image" class="card-img-top" height="200px">
                        <div class="card-body text-center">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text">@book.Author</p>
                            <div class="row mt-2">
                                <a asp-action="AddBookToCart" asp-controller="Books" asp-route-id="@book.Id" class="btn btn-success col m-1">Add to Cart</a>
                            </div>
                            <div class="row mt-2 justify-content-between">
                                <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary col m-1">Edit</a>
                                <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger col m-1">Delete</a>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>



