@model LibraryDomain.DTOs.ShoppingCartDto
@{
    ViewData["Title"] = "Shopping Cart";
}


<div class="container">
    <div class="row">
        <a class="btn btn-success" asp-action="Order">Order</a>
    </div>
    <div class="row mt-3">
        <table class="table">
            <thead>
            <tr>
                <th>Book Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var book in Model.BooksInShoppingCart)
            {
                <tr>
                    <td>@book.Book.Title</td>
                    <td>@book.Book.Author</td>
                    <td>@book.Book.Price</td>
                    <td>@book.Quantity</td>
                    <td></td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <td>Total Price:</td>
                <td></td>
                <td></td>
                <td></td>
                <td>@Model.TotalPrice</td>
            </tr>
            </tfoot>
        </table>
    </div>
</div>